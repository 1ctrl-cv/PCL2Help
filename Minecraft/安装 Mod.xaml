        <Image HorizontalAlignment="Center" Source="https://pic.liesio.com/2021/07/04/10e304764d354.PNG" />
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,4" LineHeight="17"
                    Text="4. 返回主页，选择正确的版本并启动"/>        
